<% if isContentView %>
    <div class="silvercart-widget-content-area">
        <div class="silvercart-widget-content-area_content">
            $Content
        </div>
    </div>
<% else %>
    <div class="widget">
        <div class="widget_content">
            <div class="silvercart-widget">
                <div class="silvercart-widget_content">
                    $Content
                </div>
            </div>
        </div>
    </div>
<% end_if %>